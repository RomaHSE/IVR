<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SavingsCalculatorActivity">

    <ImageButton
        android:id="@+id/buttonToCalculatorsList"
        android:layout_width="60dp"
        android:layout_height="58dp"
        android:background="#00FFFFFF"
        android:contentDescription="Обратно"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/baseline_arrow_back_24" />

    <TextView
        android:id="@+id/textView23"
        android:layout_width="99dp"
        android:layout_height="41dp"
        android:text="Итог:"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.464"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.214" />

    <TextView
        android:id="@+id/totalSavingsSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:text="0"
        android:textColor="@color/main_theme"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="@+id/textView23"
        app:layout_constraintHorizontal_bias="0.629"
        app:layout_constraintStart_toStartOf="@+id/textView23"
        app:layout_constraintTop_toBottomOf="@+id/textView23" />

    <EditText
        android:id="@+id/monthlyProfit"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="40dp"
        android:ems="10"
        android:hint="Ежемесячный доход"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/totalSavingsSum"
        app:layout_constraintStart_toStartOf="@+id/totalSavingsSum"
        app:layout_constraintTop_toBottomOf="@+id/totalSavingsSum" />

    <EditText
        android:id="@+id/savingsPercent"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Процент от дохода"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/monthlyProfit"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/monthlyProfit"
        app:layout_constraintTop_toBottomOf="@+id/monthlyProfit" />

    <Button
        android:id="@+id/countSButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@color/main_theme"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:text="Рассчитать"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/periodSavings"
        app:layout_constraintHorizontal_bias="0.54"
        app:layout_constraintStart_toStartOf="@+id/periodSavings"
        app:layout_constraintTop_toBottomOf="@+id/periodSavings"
        app:layout_constraintVertical_bias="0.206" />

    <EditText
        android:id="@+id/periodSavings"
        android:layout_width="wrap_content"
        android:layout_height="50dp"
        android:layout_marginTop="36dp"
        android:ems="10"
        android:hint="Период (мес.)"
        android:inputType="number"
        app:layout_constraintEnd_toEndOf="@+id/savingsPercent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/savingsPercent"
        app:layout_constraintTop_toBottomOf="@+id/savingsPercent" />
</androidx.constraintlayout.widget.ConstraintLayout>